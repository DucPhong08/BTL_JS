                </div>
                <div class="blk-body">
                    <div class="flex">
                        <div style="width: 100%;overflow-x: auto;overflow-y: hidden;white-space: nowrap"> 
                            <span style="border-bottom: 2px solid green">Số Chương :{{totalCount }} chương</span>
                        </div>
                    </div>
                </div>
                <div class="blk-body">
                    <div id="chaptercontainer" class="container my-2" style="overflow: hidden; max-height: 180px; display: flex; flex-wrap: wrap;">
                        {{#each reads}}
                        <div class="col-md-4 mb-2" >
                            <a href="/truyen/{{../book.slug}}/chuong-{{chap this.chapter}}"
                             data-id="{{chap this.chapter}}" 
                             style="display: block; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;margin: 4px 0"
                             
                             >{{this.Chap}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>

