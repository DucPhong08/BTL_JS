                <div class="blk-body">Tác giả:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; {{book.author}}</div>
                <div class="blk-body">Thể loại:&nbsp;&nbsp;&nbsp;&nbsp;  {{book.category}} </div>		
                <div class="blk-body">Nhập thời:&nbsp;&nbsp;&nbsp;{{time book.createdAt}}</div>
            </div> 
            <div class="blk">
                <div class="blk-top"><i class="fas fa-dot-circle"></i> Thao tác</div>
                <div class="blk-body">
                    <div class="row justify-content-md-left " style="margin-top: 0;" >
                        <div class="col-3 col-lg-2">
                            <a href="#" id="readnow"  data-book-slug="{{book.slug}}"><span class="blk-item" id="readnowbtn"><i class="fas fa-external-link-alt"></i><br>Đọc tiếp</span></a>
                        </div>
                        <div class="col-3 col-lg-2">
                            <span class="blk-item" onclick="likeStory('{{book._id}}')"><i class="fas fa-thumbs-up"></i><br>Thích</span>
                        </div>
                        <div class="col-3 col-lg-2">
                            <span class="blk-item" onclick="followStory('{{book._id}}')" style="cursor: pointer;"><i class="fas fa-plus"></i><br>Theo dõi</span>
                        </div>
                        
                        <div class="col-3 col-lg-2">
                            <span class="blk-item" onclick="markthisbook()"><i class="fas fa-edit"></i><br>Báo cáo</span>
                        </div>
                    </div>
                </div>
            </div>
