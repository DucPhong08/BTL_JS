<section class="category" id="moi-cap-nhat">
        <div class="fake-symbol text-center rounded" style="background-color: #FF2853; "><i class="fa-solid fa-wand-sparkles"></i></div><span class="cat-header">Truyện mới cập nhật</span>
        <div class="thumbnail-container">
            {{#each books}}
            <div class="thumbnail">
                <a href="truyen/{{this.slug}}"><img src="{{this.img}}" alt="{{this.name}}" style="width: 12em;height: 15em; border-radius: 5px;object-fit: cover;"></a>
                <div class="thumbnail-text">
                    <a href="truyen/{{this.slug}}" style="display: block; overflow: hidden; text-overflow: ellipsis; white-space: nowrap"><h3 style="display: inline; margin: 0;">{{this.name}}</h3></a>
                    <p>{{Chapter}} Chapter</p>
                </div>
                <div class="tag upload-time">
                    <p>{{time this.updatedAt}}</p>
                </div>
            </div>
            {{/each}}
        </div>
        <nav aria-label="Page navigation example" class="pagination justify-content-center">
            <ul class="pagination">
                {{#if hasPreviousPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{previousPage}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                {{/if}}

                {{#each (range 1 totalPages)}}
                    <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                        <a class="page-link" href="?page={{this}}">{{this}}</a>
                    </li>
                {{/each}}

                {{#if hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{nextPage}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                {{/if}}
            </ul>
        </nav>






        <div class="click-for-more">
            <a href="/">Xem thêm truyện mới cập nhật</a>
        </div>

</section>

